=content_for :stylesheets do
  =stylesheet_link_tag :promesa  
  
=content_for :scripts do
  <script src="http://github.com/janl/mustache.js/raw/master/mustache.js"></script>
  =javascript_include_tag :promesa  
  
.promesa
  #denuncia
    %h1 Nueva Promesa
    =form_for @promesa, :url => crear_promesas_path, |
      :validate => true, :html => {:multipart => true} do |f|
      = f.error_messages
      
      %fieldset.info_funcionario
        %legend El que promete
        = f.fields_for :info_funcionario do |iff|
          .nombre
            =iff.label :nombre
            =iff.text_field :nombre
          .cargo
            =iff.label :cargo
            =iff.text_field :cargo
          .entidad
            =iff.label :entidad
            =iff.text_field :entidad
      
      %fieldset.lo_prometido
        %legend Lo prometido
        .lo_prometido
          =f.text_area :lo_prometido
      
        .tags
          =f.label :tag_list, 'Tags'
          =f.text_field :tag_list
      
        .fecha_declaracion
          =f.label :fecha_declaracion, 'CÃºando?'
          =f.datepicker :fecha_declaracion
          
        .region
          =f.label :region
          =f.collection_select :region_id, Region.all, :id, :nombre, {:prompt => '-- Selecciona --'}
            
      %fieldset.pruebas
        %legend Pruebas
        #pruebas
          = render 'prueba/upload.tpl'
          -#%script
            promesa.add_prueba()
        
        #botones
          =button_tag(:type => 'button',:onclick => 'promesa.add_prueba("link")') do
            + link
          =button_tag(:type => 'button',:onclick => 'promesa.add_prueba("imagen")') do
            + foto o imagen
          =button_tag(:type => 'button',:onclick => 'promesa.add_prueba("archivo")') do
            + archivo
          =button_tag(:type => 'button',:onclick => 'promesa.add_prueba("video")') do
            + video
          =button_tag(:type => 'button',:onclick => 'promesa.add_prueba("mapa")') do
            + mapa
      =f.submit
