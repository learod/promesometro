<h2>Preferencias</h2>

<%= form_for(resource, :as => resource_name, :url => users_update_profile_url, :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <p><label for="user_email">Email</label><br />
  <%= f.email_field :email, :readonly => true %></p>

  <p><label for="user_name">Nombre</label><br />
  <%= f.text_field :name%></p>

  <label for="user_send_notification">Recibir notificaciones</label>
  <%= f.check_box :send_notifications %></p>

  <p><%= f.submit "Actualizar", :style =>'height: 25px' %><br /></p>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>.</p>

<%= link_to "Back", :back %>
